<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_group_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:src="@drawable/my_trust" />

    <TextView
        android:id="@+id/item_group_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_toRightOf="@id/item_group_image"
        android:gravity="center_vertical"
        android:text="我的知己"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/item_group_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/ten_dp"
        android:src="@drawable/rightarrow_gray" />
    <View style="@style/split_line_style"
        android:layout_below="@id/item_group_text"/>
</RelativeLayout>