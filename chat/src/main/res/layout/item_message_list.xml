<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ninty_dp"
        android:layout_gravity="right|center_vertical">

        <TextView
            android:id="@+id/item_message_list_operation1"
            android:layout_width="@dimen/ninty_dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_message_list_operation2"
            android:layout_width="@dimen/ninty_dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/item_message_list_operation1"
            android:background="@color/chat_f58e2c"
            android:gravity="center"
            android:text="添加好友"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="15dp">

        <com.zhanghang.self.widget.CycleImageView
            android:id="@+id/item_message_list_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/default_img" />

        <TextView
            android:id="@+id/item_message_list_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/item_message_list_head_img"
            android:paddingLeft="20dp"
            android:text="一张杭州票"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_message_list_last_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_message_list_head_img"
            android:layout_below="@id/item_message_list_sender_name"
            android:layout_toRightOf="@id/item_message_list_head_img"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:text="晓得了!"
            android:textColor="@color/msg_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_message_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_message_list_sender_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="17:09"
            android:textColor="@color/msg_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_message_list_msg_num"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignBottom="@id/item_message_list_last_msg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/cycle_red_10_bg"
            android:gravity="center"
            android:text="99+"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        style="@style/split_line_style"
        android:layout_gravity="bottom"
        android:layout_marginLeft="80dp" />
</FrameLayout>