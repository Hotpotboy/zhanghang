<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout">

    <fragment
        android:name="com.sohu.focus.chat.fragment.MainFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_mainFragement"
        android:tag="MainFragment"/>

    <fragment
        android:name="com.sohu.focus.chat.fragment.UserInfoFragment"
        android:layout_width="@dimen/three_hundred_dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:id="@+id/main_leftFragement"
        android:tag="UserInfoFragment"/>
</android.support.v4.widget.DrawerLayout>
